@model EmailSettingsViewModel
@{
    ViewData["Title"] = "Configuraci√≥n de Email";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="mb-0">Configuraci√≥n de Email</h2>
</div>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<div class="row">
    <div class="col-lg-8">
        <div class="card mb-4">
            <div class="card-header">
                <strong>Estado de la Configuraci√≥n</strong>
            </div>
            <div class="card-body">
                @if (Model.IsConfigured)
                {
                    <div class="d-flex align-items-center gap-2">
                        <span class="badge bg-success fs-6">‚úÖ Configurado</span>
                        @if (Model.LastSuccessfulTest.HasValue)
                        {
                            <small class="text-muted">√öltima prueba: @Model.LastSuccessfulTest.Value.ToLocalTime().ToString("dd/MM/yyyy HH:mm")</small>
                        }
                    </div>
                }
                else
                {
                    <span class="badge bg-warning fs-6">‚ö†Ô∏è No configurado</span>
                    <p class="text-muted mt-2 mb-0">Configura y prueba el email para habilitar las notificaciones.</p>
                }
            </div>
        </div>

        <form asp-action="GuardarConfiguracionEmail" method="post">
            <div class="card mb-4">
                <div class="card-header">
                    <strong>Proveedor de Email</strong>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label class="form-label">Proveedor</label>
                        <select asp-for="Provider" class="form-select" id="providerSelect" onchange="toggleProviderFields()">
                            <option value="SMTP">SMTP Tradicional</option>
                            <option value="Gmail">Gmail (OAuth2)</option>
                            <option value="Microsoft">Microsoft/Outlook (OAuth2)</option>
                        </select>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Email del remitente</label>
                                <input asp-for="SenderEmail" type="email" class="form-control" placeholder="notificaciones@tuempresa.com" required />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Nombre del remitente</label>
                                <input asp-for="SenderName" class="form-control" placeholder="Tickets Andretich" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Configuraci√≥n SMTP -->
            <div class="card mb-4" id="smtpConfig">
                <div class="card-header">
                    <strong>Configuraci√≥n SMTP</strong>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-8">
                            <div class="mb-3">
                                <label class="form-label">Servidor SMTP</label>
                                <input asp-for="SmtpHost" class="form-control" placeholder="smtp.gmail.com" />
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="mb-3">
                                <label class="form-label">Puerto</label>
                                <input asp-for="SmtpPort" type="number" class="form-control" />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Usuario</label>
                                <input asp-for="SmtpUsername" class="form-control" placeholder="tu-cuenta@gmail.com" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Contrase√±a</label>
                                <input asp-for="SmtpPassword" type="password" class="form-control" placeholder="Dejar vac√≠o para no cambiar" />
                                <small class="text-muted">Para Gmail usa una "Contrase√±a de aplicaci√≥n"</small>
                            </div>
                        </div>
                    </div>
                    <div class="form-check">
                        <input asp-for="SmtpUseSsl" class="form-check-input" type="checkbox" />
                        <label asp-for="SmtpUseSsl" class="form-check-label">Usar SSL/TLS</label>
                    </div>
                </div>
            </div>

            <!-- Configuraci√≥n OAuth2 -->
            <div class="card mb-4" id="oauth2Config" style="display:none;">
                <div class="card-header">
                    <strong>Configuraci√≥n OAuth2</strong>
                </div>
                <div class="card-body">
                    <div class="alert alert-info">
                        <strong>üìã Instrucciones:</strong>
                        <ol class="mb-0 mt-2">
                            <li id="oauth2Instructions"></li>
                            <li>Crea credenciales OAuth 2.0</li>
                            <li>Configura la URI de redirecci√≥n: <code id="redirectUri">@Url.Action("OAuth2Callback", "Admin", null, Context.Request.Scheme)</code></li>
                            <li>Copia el Client ID y Client Secret</li>
                        </ol>
                    </div>
                    
                    <div class="mb-3">
                        <label class="form-label">Client ID</label>
                        <input asp-for="OAuth2ClientId" class="form-control" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Client Secret</label>
                        <input asp-for="OAuth2ClientSecret" type="password" class="form-control" placeholder="Dejar vac√≠o para no cambiar" />
                    </div>

                    @if (Model.HasRefreshToken)
                    {
                        <div class="alert alert-success">
                            ‚úÖ Autorizaci√≥n OAuth2 completada
                        </div>
                    }
                    else
                    {
                        <p class="text-muted">Guarda la configuraci√≥n primero, luego haz clic en "Autorizar".</p>
                    }
                </div>
            </div>

            <div class="d-flex gap-2 mb-4">
                <button type="submit" class="btn btn-primary">üíæ Guardar Configuraci√≥n</button>
            </div>
        </form>

        <div class="card">
            <div class="card-header">
                <strong>Acciones</strong>
            </div>
            <div class="card-body">
                <div class="d-flex gap-2 flex-wrap">
                    <form asp-action="ProbarEmail" method="post" class="d-inline">
                        <button type="submit" class="btn btn-outline-success">üìß Enviar Email de Prueba</button>
                    </form>
                    
                    <a href="@Url.Action("OAuth2Authorize", "Admin", new { provider = "Gmail" })" 
                       class="btn btn-outline-danger" id="btnAuthGmail" style="display:none;">
                        üîó Autorizar con Google
                    </a>
                    <a href="@Url.Action("OAuth2Authorize", "Admin", new { provider = "Microsoft" })" 
                       class="btn btn-outline-primary" id="btnAuthMicrosoft" style="display:none;">
                        üîó Autorizar con Microsoft
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-4">
        <div class="card">
            <div class="card-header">
                <strong>Ayuda</strong>
            </div>
            <div class="card-body">
                <h6>SMTP Tradicional</h6>
                <p class="small text-muted">Compatible con cualquier servidor SMTP. Para Gmail, requiere "Contrase√±a de aplicaci√≥n".</p>
                
                <h6>Gmail OAuth2</h6>
                <p class="small text-muted">M√°s seguro. Requiere configurar un proyecto en Google Cloud Console.</p>
                
                <h6>Microsoft OAuth2</h6>
                <p class="small text-muted">Para cuentas Office 365/Outlook. Requiere registro en Azure Portal.</p>
            </div>
        </div>
    </div>
</div>

<div class="mt-3">
    <a class="btn btn-outline-secondary" asp-action="Departamentos">‚Üê Volver a Administraci√≥n</a>
</div>

@section Scripts {
<script>
function toggleProviderFields() {
    const provider = document.getElementById('providerSelect').value;
    const smtpConfig = document.getElementById('smtpConfig');
    const oauth2Config = document.getElementById('oauth2Config');
    const btnAuthGmail = document.getElementById('btnAuthGmail');
    const btnAuthMicrosoft = document.getElementById('btnAuthMicrosoft');
    const oauth2Instructions = document.getElementById('oauth2Instructions');

    if (provider === 'SMTP') {
        smtpConfig.style.display = 'block';
        oauth2Config.style.display = 'none';
        btnAuthGmail.style.display = 'none';
        btnAuthMicrosoft.style.display = 'none';
    } else {
        smtpConfig.style.display = 'none';
        oauth2Config.style.display = 'block';
        
        if (provider === 'Gmail') {
            oauth2Instructions.textContent = 'Ve a Google Cloud Console y habilita Gmail API';
            btnAuthGmail.style.display = 'inline-block';
            btnAuthMicrosoft.style.display = 'none';
        } else {
            oauth2Instructions.textContent = 'Ve a Azure Portal y registra una aplicaci√≥n';
            btnAuthGmail.style.display = 'none';
            btnAuthMicrosoft.style.display = 'inline-block';
        }
    }
}

// Ejecutar al cargar
document.addEventListener('DOMContentLoaded', toggleProviderFields);
</script>
}
