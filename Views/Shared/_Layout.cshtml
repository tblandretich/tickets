@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Tickets Andretich</title>
    <link rel="icon" type="image/png" href="~/favicon.png" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light border-bottom mb-3" style="background:#fff;">
          <div class="container-fluid">
            <a class="navbar-brand fw-bold text-danger d-flex align-items-center" asp-controller="Home" asp-action="Index">
                <img src="~/images/logo.png" alt="Logo" style="width:36px;height:36px;border-radius:50%;margin-right:8px;">
                Tickets Andretich
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item"><a class="nav-link" asp-controller="Tickets" asp-action="Index">Tickets</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Dashboard" asp-action="Index">Dashboard</a></li>
                    @if (User.IsInRole("Admin"))
                    {
                        <li class="nav-item"><a class="nav-link" asp-controller="Admin" asp-action="Departamentos">Admin</a></li>
                    }
                </ul>
                <ul class="navbar-nav">
                    @if (SignInManager.IsSignedIn(User))
                    {
                        <!-- Campanita de notificaciones -->
                        <li class="nav-item dropdown me-2">
                            <a class="nav-link position-relative" href="#" id="notifDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false" onclick="cargarNotificaciones()">
                                <span id="notifBell" class="fs-5">ðŸ””</span>
                                <span id="notifBadge" class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger" style="display:none;">0</span>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="notifDropdown" style="min-width:320px;max-height:400px;overflow-y:auto;">
                                <li class="dropdown-header d-flex justify-content-between align-items-center">
                                    <strong>Notificaciones</strong>
                                    <button class="btn btn-sm btn-link p-0" onclick="marcarTodasLeidas()">Marcar todas</button>
                                </li>
                                <li><hr class="dropdown-divider"></li>
                                <li id="notifList"><div class="text-center text-muted p-3">Sin notificaciones</div></li>
                            </ul>
                        </li>
                        <li class="nav-item"><a class="nav-link" asp-area="Identity" asp-page="/Account/Manage/Index">Hola, @User.Identity?.Name</a></li>
                        <li class="nav-item">
                            <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="/Identity/Account/Login" method="post" class="d-inline">
                                <button type="submit" class="btn btn-sm btn-primary">Salir</button>
                            </form>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item"><a class="btn btn-sm btn-primary" asp-area="Identity" asp-page="/Account/Login">Ingresar</a></li>
                    }
                </ul>
            </div>
          </div>
        </nav>
    </header>
    <main class="container">
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success">@TempData["Success"]</div>
        }
        @RenderBody()
    </main>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    
    <!-- Script de notificaciones -->
    <script>
        let notifCount = 0;
        
        async function cargarNotificaciones() {
            try {
                const res = await fetch('/Tickets/GetNotificaciones');
                const data = await res.json();
                actualizarUI(data);
            } catch (e) { console.error('Error cargando notificaciones:', e); }
        }
        
        function actualizarUI(data) {
            notifCount = data.count;
            const badge = document.getElementById('notifBadge');
            const bell = document.getElementById('notifBell');
            const list = document.getElementById('notifList');
            
            if (notifCount > 0) {
                badge.textContent = notifCount > 9 ? '9+' : notifCount;
                badge.style.display = 'inline';
                bell.classList.add('bell-shake');
            } else {
                badge.style.display = 'none';
                bell.classList.remove('bell-shake');
            }
            
            if (data.items.length === 0) {
                list.innerHTML = '<div class="text-center text-muted p-3">Sin notificaciones nuevas</div>';
            } else {
                list.innerHTML = data.items.map(n => `
                    <a class="dropdown-item d-flex align-items-start py-2" href="/Tickets/Details/${n.ticketId}" onclick="marcarLeida(${n.id})">
                        <span class="me-2">${n.tipo === 'NuevoTicket' ? 'ðŸ†•' : 'ðŸ”„'}</span>
                        <div class="flex-grow-1">
                            <div class="fw-bold small">${n.mensaje}</div>
                            <small class="text-muted">${n.fecha}</small>
                        </div>
                    </a>
                `).join('');
            }
        }
        
        async function marcarLeida(id) {
            await fetch('/Tickets/MarcarNotificacionLeida?id=' + id, { method: 'POST' });
        }
        
        async function marcarTodasLeidas() {
            await fetch('/Tickets/MarcarTodasLeidas', { method: 'POST' });
            await cargarNotificaciones();
        }
        
        // Polling cada 30 segundos
        setInterval(cargarNotificaciones, 30000);
        
        // Cargar al inicio
        document.addEventListener('DOMContentLoaded', cargarNotificaciones);
    </script>
    
    @RenderSection("Scripts", required: false)
</body>
</html>
