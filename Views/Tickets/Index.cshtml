        <span class="badge bg-light text-dark">@ticketsDepartamento.Count pendientes</span>
    </div>
    <div class="card-body p-0">
        @if (ticketsDepartamento.Any())
        {
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th width="60">#</th>
                        <th>Asunto</th>
                        <th>Creador</th>
                        <th>Asignado/Depto</th>
                        <th width="90">Importancia</th>
                        <th width="100">Estado</th>
                        <th width="130">Creado</th>
                        <th width="60"></th>
                    </tr>
                </thead>
                <tbody>
                @foreach (var t in ticketsDepartamento)
                {
                    var badgeClass = t.Importancia == TicketsAndretich.Web.Models.Importancia.Alta ? "bg-danger" :
                                     t.Importancia == TicketsAndretich.Web.Models.Importancia.Media ? "bg-warning text-dark" : "bg-secondary";
                    var estadoClass = t.Estado == TicketsAndretich.Web.Models.EstadoTicket.Abierto ? "text-success" :
                                      t.Estado == TicketsAndretich.Web.Models.EstadoTicket.EnProgreso ? "text-primary" : "text-secondary";
                    <tr>
                        <td><strong>@t.Id</strong></td>
                        <td>@t.Asunto</td>
                        <td><small>@t.Creator?.Email</small></td>
                        <td><small>@(t.AsignadoA?.Email ?? t.DepartamentoDestino?.Name ?? "Sin asignar")</small></td>
                        <td><span class="badge @badgeClass">@t.Importancia</span></td>
                        <td class="@estadoClass fw-bold">@t.Estado</td>
                        <td><small>@t.FechaCreacion.ToLocalTime().ToString("dd/MM HH:mm")</small></td>
                        <td><a class="btn btn-sm btn-info text-white" asp-action="Details" asp-route-id="@t.Id">Ver</a></td>
                    </tr>
                }
                </tbody>
            </table>
        }
        else
        {
            <div class="text-center text-muted py-4">
                <span class="fs-1">üì≠</span>
                <p class="mb-0">No hay tickets pendientes en el departamento</p>
            </div>
        }
    </div>
    
    @if (ticketsDeptoCerrados.Any())
    {
        <div class="card-footer bg-light">
            <details>
                <summary class="text-muted cursor-pointer">
                    üìÅ Ver @ticketsDeptoCerrados.Count tickets cerrados del departamento
                </summary>
                <table class="table table-sm mt-2 mb-0">
                    <tbody>
                    @foreach (var t in ticketsDeptoCerrados.Take(5))
                    {
                        <tr class="text-muted">
                            <td width="60">#@t.Id</td>
                            <td>@t.Asunto</td>
                            <td width="150"><small>@t.FechaCierre?.ToLocalTime().ToString("dd/MM/yyyy")</small></td>
                            <td width="80"><a class="btn btn-sm btn-outline-secondary" asp-action="Details" asp-route-id="@t.Id">Ver</a></td>
                        </tr>
                    }
                    </tbody>
                </table>
            </details>
        </div>
    }
</div>
}

<!-- ========== VISTA ADMIN: TODOS LOS TICKETS ========== -->
@if (isAdmin)
{
<div class="card shadow-sm">
    <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center">
        <h5 class="mb-0">üëë Todos los Tickets (Admin)</h5>
        <span class="badge bg-light text-dark">@Model.Count() total</span>
    </div>
    <div class="card-body p-0">
        <table class="table table-hover table-sm mb-0">
            <thead class="table-light">
                <tr>
                    <th>#</th>
                    <th>Asunto</th>
                    <th>Creador</th>
                    <th>Departamento</th>
                    <th>Asignado</th>
                    <th>Estado</th>
                    <th>Creado</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
            @foreach (var t in Model.Take(20))
            {
                <tr class="@(t.Estado == TicketsAndretich.Web.Models.EstadoTicket.Cerrado ? "text-muted" : "")">
                    <td>@t.Id</td>
                    <td>@t.Asunto</td>
                    <td><small>@t.Creator?.Email</small></td>
                    <td>@t.DepartamentoDestino?.Name</td>
                    <td><small>@(t.AsignadoA?.Email ?? "Sin asignar")</small></td>
                    <td>@t.Estado</td>
                    <td><small>@t.FechaCreacion.ToLocalTime().ToString("dd/MM HH:mm")</small></td>
                    <td><a class="btn btn-sm btn-outline-dark" asp-action="Details" asp-route-id="@t.Id">Ver</a></td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>
}
