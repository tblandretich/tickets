@model IEnumerable<TicketsAndretich.Web.Models.Ticket>
@{
    var misTickets = ViewBag.MisTickets as List<TicketsAndretich.Web.Models.Ticket> ?? new List<TicketsAndretich.Web.Models.Ticket>();
    var misTicketsCerrados = ViewBag.MisTicketsCerrados as List<TicketsAndretich.Web.Models.Ticket> ?? new List<TicketsAndretich.Web.Models.Ticket>();
    var ticketsDepartamento = ViewBag.TicketsDepartamento as List<TicketsAndretich.Web.Models.Ticket> ?? new List<TicketsAndretich.Web.Models.Ticket>();
    var ticketsDeptoCerrados = ViewBag.TicketsDepartamentoCerrados as List<TicketsAndretich.Web.Models.Ticket> ?? new List<TicketsAndretich.Web.Models.Ticket>();
    var isAdmin = ViewBag.IsAdmin as bool? ?? false;
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>üìã Gesti√≥n de Tickets</h2>
    <a class="btn btn-primary" asp-action="Create">+ Nuevo ticket</a>
</div>

<!-- ========== MIS TICKETS ========== -->
<div class="card mb-4 shadow-sm">
    <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
        <h5 class="mb-0">üéØ Mis Tickets</h5>
        <span class="badge bg-light text-dark">@misTickets.Count pendientes</span>
    </div>
    <div class="card-body p-0">
        @if (misTickets.Any())
        {
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th width="60">#</th>
                        <th>Asunto</th>
                        <th>Creador</th>
                        <th>Asignado/Depto</th>
                        <th width="90">Importancia</th>
                        <th width="100">Estado</th>
                        <th width="130">Creado</th>
                        <th width="60"></th>
                    </tr>
                </thead>
                <tbody>
                @foreach (var t in misTickets)
                {
                    var badgeClass = t.Importancia == TicketsAndretich.Web.Models.Importancia.Alta ? "bg-danger" :
                                     t.Importancia == TicketsAndretich.Web.Models.Importancia.Media ? "bg-warning text-dark" : "bg-secondary";
                    var estadoClass = t.Estado == TicketsAndretich.Web.Models.EstadoTicket.Abierto ? "text-success" :
                                      t.Estado == TicketsAndretich.Web.Models.EstadoTicket.EnProgreso ? "text-primary" : "text-secondary";
                    <tr>
                        <td><strong>@t.Id</strong></td>
                        <td>@t.Asunto</td>
                        <td><small>@t.Creator?.Email</small></td>
                        <td><small>@(t.AsignadoA?.Email ?? t.DepartamentoDestino?.Name ?? "Sin asignar")</small></td>
                        <td><span class="badge @badgeClass">@t.Importancia</span></td>
                        <td class="@estadoClass fw-bold">@t.Estado</td>
                        <td><small>@t.FechaCreacion.ToLocalTime().ToString("dd/MM HH:mm")</small></td>
                        <td><a class="btn btn-sm btn-primary" asp-action="Details" asp-route-id="@t.Id">Ver</a></td>
                    </tr>
                }
                </tbody>
            </table>
        }
        else
        {
            <div class="text-center text-muted py-4">
                <span class="fs-1">‚úÖ</span>
                <p class="mb-0">No tienes tickets pendientes asignados</p>
            </div>
        }
    </div>
    
    @if (misTicketsCerrados.Any())
    {
        <div class="card-footer bg-light">
            <details>
                <summary class="text-muted cursor-pointer">
                    üìÅ Ver @misTicketsCerrados.Count tickets cerrados
                </summary>
                <table class="table table-sm mt-2 mb-0">
                    <tbody>
                    @foreach (var t in misTicketsCerrados.Take(5))
                    {
                        <tr class="text-muted">
                            <td width="60">#@t.Id</td>
                            <td>@t.Asunto</td>
                            <td width="150"><small>@t.FechaCierre?.ToLocalTime().ToString("dd/MM/yyyy")</small></td>
                            <td width="80"><a class="btn btn-sm btn-outline-secondary" asp-action="Details" asp-route-id="@t.Id">Ver</a></td>
                        </tr>
                    }
                    </tbody>
                </table>
            </details>
        </div>
    }
</div>

<!-- ========== TICKETS DEL DEPARTAMENTO ========== -->
@if (ticketsDepartamento.Any() || ticketsDeptoCerrados.Any())
{
<div class="card mb-4 shadow-sm">
    <div class="card-header bg-info text-white d-flex justify-content-between align-items-center">
