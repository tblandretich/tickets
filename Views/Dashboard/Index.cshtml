    <!-- Gr√°fico L√≠nea - Tendencia -->
    <div class="col-md-4">
        <div class="chart-card">
            <h5 class="chart-title">Tendencia (√öltimos 12 d√≠as)</h5>
            <div class="chart-container">
                <canvas id="chartTendencia"></canvas>
            </div>
        </div>
    </div>
</div>

<!-- Nube de Palabras - Top Creadores de Tickets -->
<div class="row g-4 mt-2">
    <div class="col-12">
        <div class="chart-card">
            <h5 class="chart-title">üë§ Usuarios que m√°s crean tickets</h5>
            <div id="wordCloud" style="min-height: 200px; display: flex; flex-wrap: wrap; justify-content: center; align-items: center; gap: 15px; padding: 20px;">
                @{
                    var names = ViewBag.CreadorNames as string[] ?? new string[0];
                    var counts = ViewBag.CreadorCounts as int[] ?? new int[0];
                    var maxCount = counts.Length > 0 ? counts.Max() : 1;
                    // Paleta de 15 colores distintos para cada usuario
                    var colors = new[] { 
                        "#C62828", "#1565C0", "#2E7D32", "#F57C00", "#7B1FA2", 
                        "#00838F", "#D84315", "#5E35B1", "#1976D2", "#388E3C",
                        "#E64A19", "#512DA8", "#0097A7", "#F9A825", "#AD1457"
                    };
                    
                    for (int i = 0; i < names.Length; i++)
                    {
                        var ratio = (double)counts[i] / maxCount;
                        var fontSize = 14 + (int)(ratio * 24); // 14px a 38px
                        var fontWeight = ratio > 0.5 ? "700" : (ratio > 0.3 ? "600" : "500");
                        var color = colors[i % colors.Length];
                        var opacity = 0.6 + (ratio * 0.4);
                        <span style="font-size: @(fontSize)px; font-weight: @fontWeight; color: @color; opacity: @opacity; padding: 5px 10px; transition: all 0.3s ease; cursor: default;" 
                              title="@counts[i] tickets creados">
                            @names[i]
                        </span>
                    }
                }
                @if (names.Length == 0)
                {
                    <span class="text-muted">No hay datos suficientes</span>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
<script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.1/dist/chart.umd.min.js"></script>
<script>
    // Datos desde el servidor
    const estadoLabels = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(ViewBag.EstadoLabels));
    const estadoData = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(ViewBag.EstadoData));
    const prioridadLabels = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(ViewBag.PrioridadLabels));
    const prioridadData = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(ViewBag.PrioridadData));
    const tendenciaLabels = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(ViewBag.TendenciaLabels));
    const tendenciaCreados = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(ViewBag.TendenciaCreados));
    const tendenciaCerrados = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(ViewBag.TendenciaCerrados));

    // Gr√°fico Dona - Estados
    new Chart(document.getElementById('chartEstado'), {
        type: 'doughnut',
        data: {
            labels: estadoLabels,
            datasets: [{
                data: estadoData,
                backgroundColor: ['#1B5E20', '#0D47A1', '#E65100', '#424242'],
                borderWidth: 2,
                borderColor: '#fff'
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            plugins: {
                legend: {
                    position: 'bottom',
                    labels: { padding: 15, usePointStyle: true }
                }
            }
        }
    });

    // Gr√°fico Barras - Prioridad
    new Chart(document.getElementById('chartPrioridad'), {
        type: 'bar',
        data: {
            labels: prioridadLabels,
            datasets: [{
                label: 'Tickets',
                data: prioridadData,
                backgroundColor: ['#1B5E20', '#E65100', '#B71C1C'],
                borderRadius: 6
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            plugins: { legend: { display: false } },
            scales: {
                y: { beginAtZero: true, ticks: { stepSize: 1 } }
            }
        }
    });

    // Gr√°fico L√≠nea - Tendencia
    new Chart(document.getElementById('chartTendencia'), {
        type: 'line',
        data: {
            labels: tendenciaLabels,
            datasets: [
                {
                    label: 'Creados',
                    data: tendenciaCreados,
                    borderColor: '#0D47A1',
                    backgroundColor: 'rgba(13, 71, 161, 0.1)',
                    fill: true,
                    tension: 0.4
                },
                {
                    label: 'Cerrados',
                    data: tendenciaCerrados,
                    borderColor: '#1B5E20',
                    backgroundColor: 'rgba(27, 94, 32, 0.1)',
                    fill: true,
                    tension: 0.4
                }
            ]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            plugins: {
                legend: { position: 'bottom', labels: { usePointStyle: true } }
            },
            scales: {
                y: { beginAtZero: true, ticks: { stepSize: 1 } }
            }
        }
    });
</script>
}
