@{
    ViewData["Title"] = "Inicio";
}

<style>
    .hero-section {
        min-height: calc(100vh - 120px);
        display: flex;
        align-items: center;
        background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
    }
    .hero-card {
        background: white;
        border-radius: 20px;
        padding: 50px;
        box-shadow: 0 15px 50px rgba(0,0,0,0.1);
        max-width: 800px;
        margin: 0 auto;
    }
    .brand-header {
        display: flex;
        align-items: center;
        gap: 20px;
        margin-bottom: 30px;
    }
    .brand-header img {
        width: 70px;
        height: 70px;
        border-radius: 50%;
        box-shadow: 0 5px 20px rgba(139, 115, 85, 0.3);
    }
    .brand-header h1 {
        font-size: 2.5rem;
        font-weight: 700;
        color: #8B7355;
        margin: 0;
    }
    .hero-description {
        font-size: 1.1rem;
        color: #666;
        line-height: 1.8;
        margin-bottom: 30px;
    }
    .feature-list {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 20px;
        margin-bottom: 35px;
    }
    .feature-item {
        display: flex;
        align-items: center;
        gap: 12px;
        padding: 15px;
        background: #f8f9fa;
        border-radius: 12px;
        transition: all 0.3s ease;
    }
    .feature-item:hover {
        background: linear-gradient(135deg, #8B7355 0%, #6B5344 100%);
        color: white;
        transform: translateY(-3px);
    }
    .feature-icon {
        font-size: 1.5rem;
    }
    .btn-hero {
        padding: 15px 40px;
        font-size: 1.1rem;
        font-weight: 600;
        border-radius: 12px;
        background: linear-gradient(135deg, #8B7355 0%, #6B5344 100%);
        border: none;
        color: white;
        text-decoration: none;
        display: inline-block;
        transition: all 0.3s ease;
    }
    .btn-hero:hover {
        transform: translateY(-3px);
        box-shadow: 0 10px 30px rgba(139, 115, 85, 0.4);
        color: white;
    }
    .btn-secondary-hero {
        padding: 15px 40px;
        font-size: 1.1rem;
        font-weight: 600;
        border-radius: 12px;
        background: transparent;
        border: 2px solid #8B7355;
        color: #8B7355;
        text-decoration: none;
        display: inline-block;
        margin-left: 15px;
        transition: all 0.3s ease;
    }
    .btn-secondary-hero:hover {
        background: #8B7355;
        color: white;
    }
</style>

<div class="hero-section">
    <div class="container">
        <div class="hero-card">
            <div class="brand-header">
                <img src="~/images/logo.png" alt="Logo Andretich">
                <h1>Tickets Andretich</h1>
            </div>
            <p class="hero-description">
                Bienvenido al sistema de gestiÃ³n de tickets de Carlos Andretich. 
                Gestione solicitudes, realice seguimiento de tareas y colabore eficientemente 
                con su equipo de trabajo.
            </p>
            <div class="feature-list" style="justify-content: center;">
                <a href="/Tickets" class="feature-item" style="text-decoration:none;color:inherit;">
                    <span class="feature-icon">ðŸ“‹</span>
                    <span>GestiÃ³n de Tickets</span>
                </a>
                <a href="/Dashboard" class="feature-item" style="text-decoration:none;color:inherit;">
                    <span class="feature-icon">ðŸ“Š</span>
                    <span>Dashboard</span>
                </a>
            </div>
            @if (User.Identity?.IsAuthenticated != true)
            {
                <a href="/Identity/Account/Login" class="btn-hero">Ingresar</a>
            }
        </div>
    </div>
</div>
