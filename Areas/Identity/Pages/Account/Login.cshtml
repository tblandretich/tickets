@page
@model LoginModel
@{
    ViewData["Title"] = "Iniciar Sesión";
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Tickets Andretich - Login</title>
    <link rel="icon" type="image/png" href="~/favicon.png" />
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <style>
        * { font-family: 'Montserrat', sans-serif; }
        body { margin: 0; min-height: 100vh; }
        .login-container {
            min-height: 100vh;
            display: flex;
        }
        .brand-side {
            flex: 1;
            background: linear-gradient(135deg, #8B7355 0%, #6B5344 50%, #5a4636 100%);
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            padding: 60px;
            color: white;
            position: relative;
            overflow: hidden;
        }
        .brand-side::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><circle cx="20" cy="20" r="1" fill="rgba(255,255,255,0.1)"/><circle cx="80" cy="40" r="1.5" fill="rgba(255,255,255,0.08)"/><circle cx="40" cy="80" r="1" fill="rgba(255,255,255,0.1)"/></svg>');
            opacity: 0.5;
        }
        .brand-content {
            position: relative;
            z-index: 1;
            text-align: center;
            max-width: 500px;
        }
        .brand-logo {
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 15px;
            margin-bottom: 20px;
        }
        .brand-logo img {
            width: 80px;
            height: 80px;
            border-radius: 50%;
            box-shadow: 0 8px 32px rgba(0,0,0,0.3);
        }
        .brand-text h1 {
            font-size: 2.5rem;
            font-weight: 700;
            margin: 0;
            letter-spacing: 2px;
        }
        .brand-text h2 {
            font-size: 3rem;
            font-weight: 700;
            margin: 0;
            letter-spacing: 3px;
        }
        .brand-subtitle {
            font-size: 1.1rem;
            font-weight: 600;
            letter-spacing: 4px;
            margin: 25px 0;
            text-transform: uppercase;
            opacity: 0.9;
        }
        .brand-description {
            font-size: 1rem;
            line-height: 1.8;
            opacity: 0.85;
            margin-top: 20px;
        }
        .form-side {
            flex: 1;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            padding: 60px;
            background: #f8f9fa;
        }
        .login-card {
            width: 100%;
            max-width: 400px;
            background: white;
            border-radius: 16px;
            padding: 50px 40px;
            box-shadow: 0 10px 40px rgba(0,0,0,0.08);
        }
        .login-header {
            text-align: center;
            margin-bottom: 35px;
        }
        .login-header h3 {
            font-size: 1.8rem;
            font-weight: 700;
            color: #333;
            margin-bottom: 8px;
        }
        .login-header p {
            color: #666;
            font-size: 0.95rem;
        }
        .form-floating {
            margin-bottom: 20px;
        }
        .form-floating input {
            border-radius: 10px;
            border: 2px solid #e0e0e0;
            height: 55px;
            font-size: 1rem;
            transition: all 0.3s ease;
        }
        .form-floating input:focus {
            border-color: #8B7355;
            box-shadow: 0 0 0 3px rgba(139, 115, 85, 0.15);
        }
        .form-floating label {
            color: #888;
        }
        .btn-login {
            width: 100%;
            padding: 15px;
            font-size: 1.1rem;
            font-weight: 600;
            border-radius: 10px;
            background: linear-gradient(135deg, #8B7355 0%, #6B5344 100%);
            border: none;
            color: white;
            letter-spacing: 1px;
            transition: all 0.3s ease;
        }
        .btn-login:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(139, 115, 85, 0.4);
            background: linear-gradient(135deg, #9a8265 0%, #7a6354 100%);
        }
        .forgot-link {
            text-align: center;
            margin-top: 20px;
        }
        .forgot-link a {
            color: #8B7355;
            text-decoration: none;
            font-size: 0.9rem;
        }
        .forgot-link a:hover {
            text-decoration: underline;
        }
        .form-check-input:checked {
            background-color: #8B7355;
            border-color: #8B7355;
        }
        @@media (max-width: 991px) {
            .login-container { flex-direction: column; }
            .brand-side { padding: 40px 20px; min-height: auto; }
            .brand-text h1 { font-size: 1.8rem; }
            .brand-text h2 { font-size: 2.2rem; }
            .form-side { padding: 40px 20px; }
            .login-card { padding: 30px 25px; }
        }
    </style>
</head>
<body>
    <div class="login-container">
        <div class="brand-side">
            <div class="brand-content">
                <div class="brand-logo">
                    <img src="~/images/logo.png" alt="Logo Andretich">
                    <div class="brand-text">
                        <h1>CARLOS</h1>
                        <h2>ANDRETICH</h2>
                    </div>
                </div>
                <div class="brand-subtitle">Distribuidores de Autopartes</div>
                <p class="brand-description">
                    Carlos Andretich es una empresa nacida en 1961 como un emprendimiento familiar, 
                    dedicada a la importación y distribución de repuestos del automotor.
                </p>
            </div>
        </div>
        <div class="form-side">
            <div class="login-card">
                <div class="login-header">
                    <h3>Bienvenido</h3>
                    <p>Sistema de Gestión de Tickets</p>
                </div>
                <form id="account" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                    <div class="form-floating">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="correo@ejemplo.com" />
                        <label asp-for="Input.Email">Correo electrónico</label>
                        <span asp-validation-for="Input.Email" class="text-danger small"></span>
                    </div>
                    <div class="form-floating">
                        <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="••••••••" />
                        <label asp-for="Input.Password">Contraseña</label>
                        <span asp-validation-for="Input.Password" class="text-danger small"></span>
                    </div>
                    <div class="form-check mb-4">
                        <input asp-for="Input.RememberMe" class="form-check-input" />
                        <label asp-for="Input.RememberMe" class="form-check-label">Recordarme</label>
                    </div>
                    <button id="login-submit" type="submit" class="btn btn-login">Ingresar</button>
                    <div class="forgot-link">
                        <a asp-page="./ForgotPassword">¿Olvidaste tu contraseña?</a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <partial name="_ValidationScriptsPartial" />
</body>
</html>
